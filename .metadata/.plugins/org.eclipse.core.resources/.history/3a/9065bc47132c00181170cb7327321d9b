
public class Loop {

	public static void main(String[] args) 
	{
		//1~10까지의 정수를 화면에 출력하는 프로그램.
		int i;
		int sum = 0;
		i = 1; //1. 루프 변수 초기화
		while(i<=10) //2. 루프 조건식
		{
			sum = sum + i;
			i++; //4. 루프 변수 변화.
		}
		
		System.out.println("1부터 10까지의 합 : " + sum);
		System.out.println("============프로그램 종료.============");
	}
	
}
	